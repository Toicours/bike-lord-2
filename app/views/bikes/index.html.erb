<div class="container index-grid">

  <div class="container bike-grid cards-column">
    <h2><strong>These bikes are waiting for you</strong></h2>
    <% @bikes.each do | bike | %>
      <%= render 'shared/bike_card', bike: bike %>
    <% end %>
  </div>

  <div class="map-column" style="width: 100% height: 100%"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
