<div class="container index-grid" style="margin-top: 64px;">
  <div class="row">
    <div class="col-sm-0 col-md-6 col-lg-6" style="margin-top: 64px !important;">
      <h2 class="mb-4"><strong>These bikes are waiting for you</strong></h2>
      <div class="container">
        <% @bikes.each do | bike | %>
          <div class="card-bottom">
            <%= render 'shared/bike_card', bike: bike %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-0 col-md-6 col-lg-6">
      <div style="width: 100%; height: 100vh; position: fixed;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
