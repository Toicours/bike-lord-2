<div style="background-color: #8ECAE6; height: 100vh;" class="d-flex align-items-center">
  <div class="container" style="background-color: #8ECAE6;">
    <div class="row d-flex justify-content-center">
      <div class="row justify-content-center">
      <p style="margin-top: 100px;" class="col-sm-12 col-md-8 col-lg-8">
        <i class="fas fa-arrow-left icon-back"></i>
        <%= link_to 'Back', :back, class:"back-link" %>
      </p>
      </div>
      <div class="col-sm-12 col-md-8 col-lg-8 bg-white p-3" style="border-radius: 24px;">
        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-6 img-card">
            <%= cl_image_tag(@bike.image.key,
            width: 400, height: 400, crop: :fill) %>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-6 row">
            <h2><%= @bike.name %></h2>
            <p>
            <% if @bike.category == "Bike" %>
              <i class="fas fa-bicycle icon-category"></i><%= @bike.category %>
            <% end %>
            <% if @bike.category == "Scooter" %>
              <i class="fas fa-charging-station icon-category"></i><%= @bike.category %>
            <% end %>
            <% if @bike.category == "Electric Bike" %>
              <i class="fas fa-bicycle icon-category"></i><%= @bike.category %>
            <% end %>
            <% if @bike.category == "Moto" %>
              <i class="fas fa-tachometer-alt icon-category"></i><%= @bike.category %>
            <% end %>
            <% if @bike.category == "Monocycle" %>
              <i class="fas fa-dharmachakra icon-category"></i><%= @bike.category %>
            <% end %>
            </p>
            <div class="details-card-owner mt-3 mb-3">
            <%= image_tag "profile_picture_card.png", class: "avatar" %>
            <p><%= @bike.user.first_name %></p>
            </div>
            <div class="empty-card-small">
              <p>
                <span class="quote"><i class="fas fa-quote-left"></i></span>
                <%= @bike.description %>
                <span class="quote"><i class="fas fa-quote-right"></i></span>
              </p>
            </div>
            <div class="d-flex justify-content-start">
              <div class="card-action m-2">
                <% if policy(@bike).destroy? %>
                <i class="far fa-trash-alt delete-link mt-3"></i>
                <%=  link_to "Delete",
                        bike_path(@bike),
                        method: :delete,
                        data: { confirm: "Do you want to delete this bike?" }, class:"delete-link ml-2"%>
                <% end %>
              </div>
              <div class="card-action m-2">
                <% if policy(@bike).destroy? %>
                <i class="far fa-edit delete-link mt-3"></i>
                <%=  link_to "Edit",
                        edit_bike_path(@bike), class:"delete-link ml-2"%>
                <% end %>
              </div>
            </div>
            <% unless current_user == @bike.user %>
              <%= link_to 'Make a rental', new_bike_rental_path(@bike), class:"primary-button text-center m-2", style:"padding: 16px 24px;" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
