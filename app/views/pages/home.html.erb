
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.1)), url('https://imagizer.imageshack.com/img924/767/uAGSJg.png')">
  <div class="container">
    <%= image_tag("logo_big.png", crop: :fill, class:"mb-5") %>
    <h1><span>Get a bike</span> and <span>ride</span> till' you <span>die</span>!</h1>
    <div class="row"></div>
      <div class="col-6">
      <%= form_tag root_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control mt-4",
          placeholder: "Find a bike"
          %>
        <%= submit_tag "Let's go!", class: "primary-button mt-4" %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
<h2 class="mt-5"><strong>These bikes are waiting for you</strong></h2>
</div>
<div class="container bike-grid">
  <% @bikes.each do | bike | %>
    <%= render 'shared/bike_card', bike: bike %>
  <% end %>
</div>
