
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.1)), url(<%= asset_path('BannerFont.png') %>);">
  <div class="container">
    <h1><span>Get a bike</span> and <span>ride</span> till' you <span>die</span>!</h1>
    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" placeholer="See bikes nearby"/>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <i class="fas fa-search"></i>
        </button>
      </div>
    </form>
    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" placeholer="When do you want to rent"/>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <i class="far fa-calendar"></i>
        </button>
      </div>
    </form>
    <%= link_to "Let's go!", bikes_path, class: "primary-button"%>
  </div>
</div>
<div class="container">
  <h2>Do you wanna add a new bike to your fleet?</h2>
  <a href="btn secondary">Add a bike</a>
</div>
<div class="container">
  <% if policy(Bike).create? %>
  <%= link_to 'New bike', new_bike_path %>
  <% end %>
</div>
