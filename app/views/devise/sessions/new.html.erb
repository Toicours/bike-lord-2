<div style="background-color: #8ECAE6; height: 100vh;" class="d-flex align-items-center">
  <div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6 col-lg-6 bg-white" style="border-radius: 24px; padding: 24px;">
      <h2 class="mt-4 mb-4">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="row">
          <div class="form-actions col-sm-12 col-md-6 col-lg-6 row">
            <%= f.button :submit, "Log in", class:"primary-button" %>
          </div>
          <div class="form-actions col-sm-12 col-md-6 col-lg-6 row text-center" style="margin-left: 20px;">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name), class:"secondary-button"%><br />
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="row text-center mt-5">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"login-link" %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
