<%= simple_form_for @bike do |f| %>
  <%= f.input :name, label:"Bike name", class:"field" %>
  <%= f.input :category, :collection => ['Bike', 'Electric Bike', 'Scooter', 'Moto', 'Monocycle'], as: :select %>
  <%= f.input :price %>
  <%= f.input :image, as: :file %>
  <%= f.input :description, as: :text  %>
  <%= f.button :submit, class:"primary-button mt-2" %>
<% end %>
