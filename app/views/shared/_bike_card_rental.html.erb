<div class="bike-card">
  <div class="img-card">
  <%= cl_image_tag(@bike.image.key,
      width: 150, height: 150, crop: :fill) %>
  </div>

  <div class="details-card">
    <div class="details-card-bike">
      <h4><b><%= @bike.name %></b></h4>
            <p>
      <% if @bike.category == "Bike" %>
        <i class="fas fa-bicycle icon-category"></i><%= @bike.category %>
      <% end %>
      <% if @bike.category == "Scooter" %>
        <i class="fas fa-tachometer-alt icon-category"></i><%= @bike.category %>
      <% end %>
      <% if @bike.category == "Electric Bike" %>
        <i class="fas fa-charging-station icon-category"></i><%= @bike.category %>
      <% end %>
      <% if @bike.category == "Moto" %>
        <i class="fas fa-motorcycle icon-category"></i><%= @bike.category %>
      <% end %>
      <% if @bike.category == "Monocycle" %>
        <i class="fas fa-dharmachakra icon-category"></i><%= @bike.category %>
      <% end %>
      </p>
    </div>

    <div class="details-card-owner">
      <%= image_tag "profile_picture_card.png", class: "avatar" %>
      <p><%= @bike.user.first_name %></p>
    </div>
  </div>

  <div class="settings-card">
    <h2><%= @bike.price %>â‚¬</h2>

    <div class="icons-card">
      <i class="far fa-edit"></i>
      <i class="far fa-trash-alt"></i>
    </div>
  </div>
</div>
